<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheBartendingApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="cocktailappicon.jpeg"
                HeightRequest="300"
                Aspect="AspectFit"
                 />

            <Label
                Text="TheBarbuddy"
                FontSize="Title"
                Style="{StaticResource Headline}"
                 />

            <Label
                Text="Welcome!"
                Style="{StaticResource SubHeadline}"
                                />

            <Button
                x:Name="EnterBtn"
                Text="(create login here) Enter" 
                Clicked="OnClickedEnter"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
